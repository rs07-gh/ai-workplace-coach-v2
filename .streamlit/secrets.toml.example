# Streamlit Cloud Secrets Configuration
# DO NOT commit this file to version control
# Copy this to secrets.toml and add your actual values

# OpenAI API Configuration
OPENAI_API_KEY = "your_openai_api_key_here"

# Model Settings
DEFAULT_MODEL = "gpt-4"
REASONING_EFFORT = "medium"
VERBOSITY = "medium"
MAX_TOKENS = 4000
TEMPERATURE = 0.1

# Processing Settings
DEFAULT_INTERVAL_MINUTES = 2.0
MAX_CONTEXT_WINDOWS = 3
RETRY_ATTEMPTS = 3
TIMEOUT_MS = 60000

# Output Settings
ENABLE_LOGGING = true
AUTO_SUMMARY = true